@model ProcessRequestModel

@{
ViewData["Title"] = "Create Process Request";
}

<div class="form-container">
    <h2>Create Process Request</h2>
    <div class="process-request" >
        <form asp-action="Index" method="post">
            <div class="form-group">
                <label asp-for="TargetId" class="control-label"></label>
                <input asp-for="TargetId" class="form-control" />
                <span asp-validation-for="TargetId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SourceId" class="control-label"></label>
                <input asp-for="SourceId" class="form-control" />
                <span asp-validation-for="SourceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActionType" class="control-label"></label>
                <select asp-for="ActionType" class="form-control" asp-items="Html.GetEnumSelectList<ActionType>()"></select>
                <span asp-validation-for="ActionType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequestDate" class="control-label"></label>
                <input asp-for="RequestDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="RequestDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input asp-for="IsAckRequired" class="form-check-input" type="checkbox" />
                <label asp-for="IsAckRequired" class="form-check-label"></label>
                <span asp-validation-for="IsAckRequired" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResponseType" class="control-label"></label>
                <input asp-for="ResponseType" class="form-control" />
                <span asp-validation-for="ResponseType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InputParams.ProcessNames" class="control-label"></label>
                <input asp-for="InputParams.ProcessNames" class="form-control" />
                <span asp-validation-for="InputParams.ProcessNames" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
   
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
